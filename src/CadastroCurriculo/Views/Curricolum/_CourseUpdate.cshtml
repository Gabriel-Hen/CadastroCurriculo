@using Core.Models.Requests
@model CourseRequest;

<div class="course-item">
    <div class="row gy-2">
        <div class="col-sm-6 col-md-4">
            <label class="col-form-label col-form-label-sm">Nome:*</label>
            <input type="text" class="form-control form-control-sm" name="Courses[@ViewData["index"]].Role" required />
        </div>
    </div>

    <div class="row gy-2">
        <div class="col-sm-6 col-md-4">
            <label class="col-form-label col-form-label-sm">Data Início:*</label>
            <input type="date" class="form-control form-control-sm" name="Courses[@ViewData["index"]].InitialDate" class="form-control form-control-sm" placeholder="dd/MM/yyyy" autocomplete="off" required />
        </div>

        <div class="col-sm-6 col-md-4">
            <label class="col-form-label col-form-label-sm">Data Fim:</label>
            <input type="date" class="form-control form-control-sm" name="Courses[@ViewData["index"]].EndDate" class="form-control form-control-sm" placeholder="dd/MM/yyyy" autocomplete="off" />
        </div>
    </div>

    <div class="row gy-2">
        <div class="col-sm-12 col-md-12">
            <label class="col-form-label col-form-label-sm">Descricao:*</label>
            <textarea type="text" class="form-control form-control-sm" name="Courses[@ViewData["index"]].Description" class="form-control form-control-sm" required></textarea>
        </div>
    </div>

    <button type="button" class="remove-course btn btn-danger bi bi-x-lg mb-2">Remover</button>
</div>